@using Store.DAL.Models;
@model List<Category>

@{
	ViewData["Title"] = "Home Page";
}

<table id="tblCategoryProduct">
	<tr id="trCategoryProduct">
		@{
			var category = Model.Where(x => x.Products != null).FirstOrDefault();

			if (category != null && category.Products != null)
			{
				foreach (var item in category.Products)
				{
					<td>
						@item.Name <br />Price : @item.Price
						<br />
						<br />
						<form action="/Home/AddToCart" method="post">
							<input type="hidden" id="ProductId" name="ProductId" value="@item.Id">
							<input type="submit" value="Add To Cart">
						</form>
					</td>
				}
			}
		}
	</tr>
</table>
